<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1>人物登録</h1>
      <%= form_with model: @person, url: {action: 'create'}, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :description %>
          <%= f.text_field :description, class: 'form-control' %>
        <%= f.submit '登録', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
