<div>
  <div class="row">
    <div class="col-md-12 mb-3">
      <%= search_form_for @q, url: admin_landmarks_path do |f| %>
        <%= f.label :name_cont, '施設名' %>
        <%= f.search_field :name_cont %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col">名前</th>
          <th scope="col">施設と人物の関わりについての説明</th>
        </tr>
        </thead>
        <tbody>
          <%= render @landmarks %>
        </tbody>
      </table>
    </div>
  </div>
</div>
