<div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <%= form_with model: @landmark, url: admin_landmark_path(@landmark), local: true do |f| %>
        <div class="mb-3">
          <%= f.label :person_id, 'Person_id' %>
          <%= f.number_field :person_id, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :description_with_person %>
          <%= f.text_field :description_with_person, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :longitude %>
          <%= f.number_field :longitude, step: "0.000001", class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :latitude %>
          <%= f.number_field :latitude, step: "0.000001", class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :address %>
          <%= f.text_field :address, class: 'form-control' %>
        </div>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
</div>
