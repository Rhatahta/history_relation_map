<div class="row">
  <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
    <div class="text-right mb-3">
      <%= link_to "編集", edit_admin_landmark_path(@landmark), class: 'btn btn-success' %>
      <%= link_to "削除", admin_landmark_path(@landmark), method: :delete, data: { confirm: "削除しますか?" }, class: 'btn btn-danger' %>
    </div>
    <table class="table table-bordered bg-white">
      <tr>
        <th scope="row"><%= "person_id" %></th>
        <td><%= @landmark.person_id %></td>
      </tr>
      <tr>
        <th scope="row"><%= "関連する人物" %></th>
        <td><%= @landmark.person.name %></td>
      </tr>
      <tr>
        <th scope="row"><%= "名前" %></th>
        <td><%= @landmark.name %></td>
      </tr>
      <tr>
        <th scope="row"><%= "施設と人物の関わりについての説明" %></th>
        <td><%= @landmark.description_with_person %></td>
      </tr>
      <tr>
        <th scope="row"><%= "経度" %></th>
        <td><%= @landmark.longitude %></td>
      </tr>
      <tr>
        <th scope="row"><%= "緯度" %></th>
        <td><%= @landmark.latitude %></td>
      </tr>
      <tr>
        <th scope="row"><%= "住所" %></th>
        <td><%= @landmark.address %></td>
      </tr>
    </table>
  </div>
</div>
