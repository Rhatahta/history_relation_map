<h5 class="text-center"><%= @person.name %>の関連施設</h5> 
<% @person.landmarks.each do |landmark| %>
  <div class="card text-center rounded-pill mb-3">
    <div class="card-body row">
      <div class="col" >
        <%= landmark.name %>
      </div>
      <div class="col">
        <%= landmark.description_with_person %>
      </div>
      <% if logged_in? %>
        <div class="col-1">
          <%= render 'people/favorite_button', landmark: landmark %>
        </div>
      <% end %>
      <div class="col">
        <%= "#{landmark.favorites.length}件のお気に入り" %>
      </div>
    </div>
  </div>
<% end %>
